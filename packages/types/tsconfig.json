{
  "compilerOptions": {
    "outDir": "dist", // Output directory for compiled files
    "declaration": true, // Generate .d.ts type declaration files
    "declarationMap": true, // Generate source maps for declarations
    "module": "ESNext", // Module system
    "target": "ESNext", // JavaScript target
    "strict": true, // Enable strict type checking
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules"]
}
